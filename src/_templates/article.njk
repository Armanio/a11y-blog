---
layout: _base.njk
---

<div class="article-inf">
	<h1 class="article-name">{{ title }}</h1>

	<ul class="tags-list tags-list--article">
		{%- for tag in keyTheme -%}
			<li class="tag">{{ tag }}</li>
		{%- endfor -%}
	</ul>

	<span class="article-date">
		<span aria-hidden="true">ðŸ• </span>
		{{ 'published' | translate }}: <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
	</span>
</div>

<div class="article">
	{{ content | safe }}
</div>

<section aria-labelledby="heading">
	<h2 id="heading" class="second-heading">{{ 'other articles' | translate }}</h2>
	{% include "article-navigation.njk" %}
</section>