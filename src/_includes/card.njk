<article class="card">
	<h3 class="third-heading card__title">
		<a class="card__title-link" href="{{ article.url }}">{{ article.data.title }}</a>
	</h3>
	<p class="card__description">{{ article.data.description }}</p>
	<ul class="topic-list topic-list--card">
		{% for tag in article.data.keyTheme %}
			<li class="topic-list__item">{{ tag }}</li>
		{% endfor %}
	</ul>
	<span class="card__article-date">
		<span aria-hidden="true">ðŸ• </span>
		<time datetime="{{ article.date | dateFormat("ISO") }}">{{ article.data.date | dateFormat("readable") }}</time>
	</span>
</article>