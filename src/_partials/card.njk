{%- for post in postslist | reverse -%}
	<article class="card">
		<h3 class="third-heading card__title">
			<a class="card__title-link" href="{{ post.url }}">{{ post.data.postName }}</a>
		</h3>
		<p class="card__description">{{ post.data.description }}</p>
		<time class="card__post-date" datetime="{{ post.date | htmlDateString }}">ðŸ•  {{ post.data.date | readableDate }}</time>
		<div class="card__tags">
			<ul class="tags-list">
				{%- for tag in post.data.keyTheme -%}
					<li class="tag">{{ tag }}</li>
				{%- endfor -%}
			</ul>
		</div>
	</article>
{%- endfor -%}
